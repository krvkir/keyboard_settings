// -*-mode: xkb-*-
default partial alphanumeric_keys modifier_keys
xkb_symbols "pc105" {
    key <ESC> { [ Escape ] };

    // The extra key on many European keyboards:
    key <LSGT> { [ less, greater, bar, brokenbar ] };

    // The following keys are common to all layouts.
    key <BKSL> { [ backslash, bar ] };
    key <SPCE> { [ space ] };
    key <TLDE> { overlay1 = <VGRA>, [ grave, asciitilde, Escape ] };
    key <AE01> { overlay1 = <V1>, [ 1, exclam ] };
    key <AE02> { overlay1 = <V2>, [ 2, at ] };
    key <AE03> { overlay1 = <V3>, [ 3, numbersign ] };
    key <AE04> { overlay1 = <V4>, [ 4, dollar ] };
    key <AE05> { overlay1 = <V5>, [ 5, percent ] };
    key <AE06> { overlay1 = <V6>, [ 6, asciicircum ] };
    key <AE07> { overlay1 = <V7>, [ 7, ampersand ] };
    key <AE08> { overlay1 = <V8>, [ 8, asterisk ] };
    key <AE09> { overlay1 = <V9>, [ 9, parenleft ] };
    key <AE10> { overlay1 = <V0>, [ 0, parenright ] };
    key <AE11> { overlay1 = <VMIN>, [ minus, underscore ] };
    key <AE12> { overlay1 = <VEQU>, [ equal, plus ] };

    include "srvr_ctrl(fkey2vt)"
    include "pc(editing)"
    include "keypad(x11)"
    include "pc(virtualkeys)"
    include "pc(overlay1_switch_caps)"
    //include "pc(overlay2_switch_lalt)"

    key <BKSP> { [ BackSpace, BackSpace ] };

    // required for capslock+tab -> ctrl+tab
    key <TAB> { overlay1 = <VTAB>, [ Tab, ISO_Left_Tab ] };
    key <RTRN> { overlay1 = <VRTN>, [ Return ] };

    key <NMLK> { [ Num_Lock ] };

    key <LFSH> { [ Shift_L ] };
    key <RTSH> { [ Shift_R ] };

    key <LCTL> { [ Control_L ] };

    // Languages and symbols are switched via right alt and ctrl.
    key <RCTL> { [ ISO_Level3_Shift ] };
    key <HYPR> { [ ISO_Next_Group, Multi_key ] };

    key <LALT> { [ Alt_L, Meta_L ] };
    key <RALT> { [ Alt_R, Meta_R ] };

    key <LWIN> { [ Super_L ] };
    key <RWIN> { [ Super_R ] };
    key <MENU> { [ Super_R ] };
    key <COMP> { [ Super_R ] };
    key <PRSC> { [ Super_R ] };

    // Modifier mappings
    modifier_map Shift { Shift_L, Shift_R };
    modifier_map Lock { Caps_Lock };
    modifier_map Control { Control_L, Control_R };
    modifier_map Mod1 { Alt_L, Alt_R, Meta_L, Meta_R };
    modifier_map Mod4 { Super_L, Super_R };
    modifier_map Mod5 { ISO_Level3_Shift };

    key <OUTP> { [ XF86Display ] };
    key <KITG> { [ XF86KbdLightOnOff ] };
    key <KIDN> { [ XF86KbdBrightnessDown ] };
    key <KIUP> { [ XF86KbdBrightnessUp ] };
};


// Virtual rows
hidden partial alphanumeric_keys
xkb_symbols "virtualkeys" {

    // Numbers row
    // ... left side
    key <VGRA> { [ NoSymbol ] };
    key <V1> { [ NoSymbol ] };
    key <V2> { [ NoSymbol ] };
    key <V3> { [ NoSymbol ] };
    key <V4> { [ NoSymbol ] };
    key <V5> { [ NoSymbol ] };
    // ... right side
    key <V6> { [ NoSymbol ] };
    key <V7> { [ emdash, endash ] };
    key <V8> { [ NoSymbol ] };
    key <V9> { [ approxeq, notequal, plusminus ] };
    key <V0> { [ NoSymbol ] };
    key <VMIN> { [ NoSymbol ] };
    key <VEQU> { [ NoSymbol ] };
    
    // First row
    // ... left side
    key <VTAB> { [ NoSymbol ] };
    key <VQ> { [ NoSymbol ] };
    key <VW> { [ NoSymbol ] };
    key <VE> { [ NoSymbol ] };
    key <VR> { [ NoSymbol ] };
    key <VT> { [ NoSymbol ] };
    // ... right side  
    key <VY> { [ NoSymbol ] };
    key <VU> { [ NoSymbol ] };
    key <VI> { [ NoSymbol ] };
    key <VO> { [ NoSymbol ] };
    key <VP> { [ NoSymbol ] };
    key <VLBR> { [ bracketleft, braceleft ] };
    key <VRBR> { [ bracketright, braceright ] };
    
    // Second row
    // ... left side
    key <VA> { [ NoSymbol ] };
    key <VS> { [ NoSymbol ] };
    key <VD> { [ NoSymbol ] };
    key <VF> { [ NoSymbol ] };
    key <VG> { [ NoSymbol ] };
    // ... right side
    key <VH> { [ NoSymbol ] };
    key <VJ> { [ NoSymbol ] };
    key <VK> { [ NoSymbol ] };
    key <VL> { [ NoSymbol ] };
    key <VSEM> {[ semicolon, colon ] };
    key <VAPO> {[ apostrophe, quotedbl ] };
    key <VRTN> { [ NoSymbol ] };

    // Third row
    // ... left side
    key <VZ> { [ NoSymbol ] };
    key <VX> { [ NoSymbol ] };
    key <VC> { [ NoSymbol ] };
    key <VV> { [ NoSymbol ] };
    key <VB> { [ NoSymbol ] };
    // ... right side
    key <VN> { [ NoSymbol ] };
    key <VM> { [ NoSymbol ] };
    key <VCOM> { [ comma, less ] } ;
    key <VPER> { [ period, greater ] };
    key <VSLA> { [ slash, question ] };

    // Extra
    key <VUP> { [ parenleft ] };
    key <VDN> { [ parenright ] };
};

hidden partial alphanumeric_keys
xkb_symbols "editing" {
    key <PRSC> {
        type= "PC_ALT_LEVEL2",
        symbols[Group1]= [ Print, Sys_Req ]
    };
    key <SCLK> { [ Scroll_Lock ] };
    key <PAUS> {
        type= "PC_CONTROL_LEVEL2",
        symbols[Group1]= [ Pause, Break ]
    };
    key <INS> { [ Insert ] };
    key <HOME> { [ Home ] };
    key <PGUP> { [ Prior ] };
    key <DELE> { [ Delete ] };
    key <END> { [ End ] };
    key <PGDN> { [ Next ] };

    key <UP> { overlay1 = <VUP>, [ Up ] };
    key <DOWN> { overlay1 = <VDN>, [ Down ] };
    key <LEFT> { [ Left ] };
    key <RGHT> { [ Right ] };

    key <VLUP> { [ Next ] };
    key <VLDN> { [ Prior ] };
};

partial modifier_keys
xkb_symbols "overlay1_switch_caps" {
    replace key <CAPS> {
        [ NoSymbol ],
        actions = [ SetControls(controls=overlay1) ]
    };
};

partial modifier_keys
xkb_symbols "overlay2_switch_lalt" {
    replace key <LALT> {
        [ NoSymbol ]
        , actions = [ SetControls(controls=overlay2) ]
    };
};
